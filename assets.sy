global_gain := 1.0
random_thudd :: fn {
    l_audio_play(random_choice(thudds), false, (global_gain * 0.2, global_gain * 0.1), (1.0, 0.05))
}

random_plink :: fn {
    l_audio_play(random_choice(plinks), false, (global_gain, global_gain * 0.1), (0.7, 0.2))
}

